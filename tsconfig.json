{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@forum-api/*": ["apps/forum-api/src/app/*"],
            "@forum-api/test/*": ["apps/forum-api/test/*"],
            "@users/*": ["apps/users/src/app/*"],
            "@users/test/*": ["apps/users/test/*"],
            "@backend/shared/*": ["libs/backend/shared/src/*"],
            "@backend/shared/test/*": ["libs/backend/shared/test/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
